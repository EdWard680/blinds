FROM resin/%%BALENA_MACHINE_NAME%%-debian

RUN apt-get update && \
	apt-get install -yq --no-install-recommends python3 python3-setuptools python3-pip && \
	apt-get clean && rm -rf /var/lib/apt/lists/*

RUN pip3 install wiringpi

COPY . /usr/src/app/blinds/

ENV INITSYSTEM on

CMD ["python3", "/usr/src/app/blinds/main.py"]

